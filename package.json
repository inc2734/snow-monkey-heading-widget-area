  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "cpy-cli": "^2.0.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "sass-basis": "^9.5.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "clean:js": "rimraf dist/js",
    "clean:zip": "rimraf snow-monkey-heading-widget-area.zip",
    "cleanup:css": "rimraf dist/css && mkdir -p dist/css",
    "css": "node-sass src/css -o dist/css && postcss dist/css/app.css -r -c=postcss.config.js",
    "js": "webpack src/js/app.js -o dist/js/app.js --config webpack.config.js",
    "build": "npm-run-all -p js css",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/bin' --exclude='/tests' --exclude='package*.json' . snow-monkey-heading-widget-area && cd snow-monkey-heading-widget-area && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-heading-widget-area.zip snow-monkey-heading-widget-area",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  },
  "dependencies": {
    "@inc2734/for-each-html-nodes": "^0.2.0"
  }
}
